    <!-- JavaScript -->
    <script>
        // ã‚¯ãƒªãƒƒãƒ—ãƒœãƒ¼ãƒ‰ã‚³ãƒ”ãƒ¼æ©Ÿèƒ½
        function copyToClipboard() {
            const copyText = document.getElementById("promptText");
            const btnText = document.getElementById("btnText");
            copyText.select();
            copyText.setSelectionRange(0, 99999);
            navigator.clipboard.writeText(copyText.value).then(() => {
                btnText.innerText = "ã‚³ãƒ”ãƒ¼ã—ã¾ã—ãŸï¼";
                setTimeout(() => { btnText.innerText = "ã“ã®ãƒ—ãƒ­ãƒ³ãƒ—ãƒˆã‚’ã‚³ãƒ”ãƒ¼ã™ã‚‹"; }, 3000);
            });
        }

        // FAQã‚¢ã‚³ãƒ¼ãƒ‡ã‚£ã‚ªãƒ³æ©Ÿèƒ½
        document.addEventListener('DOMContentLoaded', function() {
            const faqQuestions = document.querySelectorAll('.faq-question');

            faqQuestions.forEach(question => {
                question.addEventListener('click', () => {
                    const item = question.parentElement;
                    const answer = question.nextElementSibling;
                    
                    // Toggle current item
                    item.classList.toggle('active');

                    if (item.classList.contains('active')) {
                        answer.style.maxHeight = answer.scrollHeight + "px";
                    } else {
                        answer.style.maxHeight = null;
                    }
                });
            });
        });
    </script>
